<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Spending">

    <TextView
        android:id="@+id/textView_savings"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="548dp"
        android:text="Make the most of your savings: "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="448dp"
        android:text="Let us help you find an investment strategy suitable for you, so that you can watch your savings grow. Take the quiz below to find out what type of investor you are!"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="325dp"
        android:text="Learn More About:"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Quiz"
        android:layout_width="178dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="355dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="Take the Quiz" />

    <Button
        android:id="@+id/funds"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="232dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="ETFs" />

    <Button
        android:id="@+id/shares"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="132dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="Shares" />

    <Button
        android:id="@+id/bonds"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="Bonds" />

</RelativeLayout>