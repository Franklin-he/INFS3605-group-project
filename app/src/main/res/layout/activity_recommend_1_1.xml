<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D9D4D"
    tools:context=".activities.Spending">


    <View
        android:id="@+id/whiteRoundedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="136dp"
        android:background="@drawable/round_rect_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_savings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="519dp"
        android:gravity="center_horizontal"
        android:text="Make the most of your savings "
        android:textColor="#6F6969"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="429dp"
        android:gravity="center_horizontal"
        android:text="Let us help you find an investment strategy suitable for you, so that you can watch your savings grow. Take the quiz below to find out what type of investor you are!"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="270dp"
        android:gravity="center_horizontal"
        android:text="Click to Learn More"
        android:textColor="#6F6969"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Quiz"
        android:layout_width="178dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="331dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button"
        android:padding="8dp"
        android:text="Take the Quiz"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/funds"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="200dp"
        android:layout_weight="1"
        android:background="#B9E3BA"
        android:padding="8dp"
        android:text="ETFs"
        android:textSize="18sp" />

    <Button
        android:id="@+id/shares"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="132dp"
        android:layout_weight="1"
        android:background="#B9E3BA"
        android:padding="8dp"
        android:text="Shares"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bonds"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="67dp"
        android:layout_weight="1"
        android:background="#B9E3BA"
        android:padding="8dp"
        android:text="Bonds"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="292dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="619dp"
        android:text="Invest and Grow"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="324dp"
        android:layout_marginBottom="638dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="346dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="645dp"
        android:src="@drawable/up" />

</RelativeLayout>