        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/shopping_amount"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="304dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:hint="Enter here"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF" />

    <EditText
        android:id="@+id/entertainment"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="264dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:inputType="text"
        android:padding="8dp"
        android:text="Entertainment: "
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/entertainment_amount"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="264dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:hint="Enter here"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF" />

    <EditText
        android:id="@+id/utilities"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="224dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:inputType="text"
        android:padding="8dp"
        android:text="Utilities: "
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/utilities_amount"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="224dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:hint="Enter here"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF" />

    <EditText
        android:id="@+id/transport"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="184dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:inputType="text"
        android:padding="8dp"
        android:text="Transport: "
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/transport_amount"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="184dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:hint="Enter here"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF" />

    <EditText
        android:id="@+id/other"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="144dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:inputType="text"
        android:padding="8dp"
        android:text="Other: "
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/other_amount"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
